version: '2'
services:
    app:
        container_name: "phpmentors.stagehand-fsm.app"
        image: "phpmentors/php-app:php53"
        volumes:
            - ".:/var/app"
        environment:
            TERM: "xterm"
            TZ: "Asia/Tokyo"
            LANG: "ja_JP.UTF-8"
            PHP_INI: "docker/php.ini"
